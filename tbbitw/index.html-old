    <style>

    .overlay {
        height: 0%;
        width: 100%;
        position: fixed;
        z-index: 1;
        top: 0;
        left: 0;
        background-color: rgb(47, 79, 79);
        overflow-y: hidden;
        transition: 0.5s;
	  }
	
	.overlay-content {
	  position: relative;
	  top: 5%;
	  width: 100%;
	  text-align: center;
	  margin-top: 30px;
	}
	
	.overlay a {
	  padding: 8px;
	  text-decoration: none;
	  font-size: 36px;
	  color: #f1f1f1;
	  display: block;
	  transition: 0.3s;
	}
	
	.overlay a:hover, .overlay a:focus {
	  color: #f1f1f1;
	}
	
	.overlay .closebtn  {
	  position: absolute;
	  top: 10px;
	  right: 45px;
	  font-size: 60px;
	}

  .close-button-menu {
    position: absolute;
    top: 5px;
    right: 7px;
    float: right;
    width: 50px;
    height: 0px;
  }
	
	@media screen and (max-height: 450px) {
	  .overlay {overflow-y: auto;}
	  .overlay a {font-size: 20px}
	  .overlay a {font-family: 'Roboto Flex', sans-serif;}
	  .overlay .closebtn {
	  font-size: 40px;
	  top: 15px;
	  right: 35px;
	  }
	}


    </style>

